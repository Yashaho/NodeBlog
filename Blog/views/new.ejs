<% include partials/header %>

<section class="new-post">
    <div class="container">
        <div class = "row">
            <div class="col-md-12">
                    <h1 class="heading">Post a new Story</h1>
                        <form class="job-form" action = "/" method = "POST">
                            
                            
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input class="form-control" type = "text" name = "title" placeholder = "Title">
                            </div>
                            <div class="form-group">
                                <label for="company">Image</label>
                                <input class="form-control" type = "text" name = "image" placeholder = "Image url">
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea class="form-control" rows="10" name="description" id="comment" placeholder="Description"></textarea>
                            </div>

                        <div class="form-group">
                                    <button style="width:100%;" class="btn btn-lg btn-primary">Submit</button>
                                    <p>
                                    <a href="/joblist">Go back</a> 
                                    </p>
                                
                            </div>
                            </div>
                        </form>
                </div>
                
                </div>
        </div>
    </div>
        </div>
        </div>
</section>

